{
  "manifest_version": 2,
  "name": "small-clock",
  "version": "0.0.4",
  "description": "A simple and small 24hr clock which sits in your toolbar. Ideal for fullscreen browser use",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Small Clock"
  },
  "permissions": ["storage"],
  "applications": {
      "gecko": {
          "id": "@small-clock"
      }
    }
}
